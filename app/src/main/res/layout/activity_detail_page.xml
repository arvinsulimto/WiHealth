<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPage"
    android:background="@color/colorGrey">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@color/colorWhite">

                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewpager">

                </android.support.v4.view.ViewPager>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Arvin Ganteng Banget"
                    android:id="@+id/tvNamePager"
                    android:layout_marginTop="210dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="15dp"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_star_black_24dp"
                    android:layout_marginTop="240dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="sans-serif"
                    android:text="4.3"
                    android:id="@+id/tvRatePager"
                    android:layout_marginTop="240dp"
                    android:layout_marginLeft="30dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="sans-serif"
                    android:text="(161 Reviews)"
                    android:id="@+id/tvCountReviewPager"
                    android:layout_marginTop="240dp"
                    android:layout_marginLeft="50dp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_people_black_24dp"
                    android:layout_marginTop="260dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="sans-serif"
                    android:text="100 person here"
                    android:id="@+id/tvPersonPager"
                    android:layout_marginTop="260dp"
                    android:layout_marginLeft="30dp" />

                <View
                    android:layout_width="370dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="290dp"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:layout_marginTop="305dp"
                    android:layout_marginLeft="15dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="sans-serif"
                    android:text="Jl.testing yaaa asdasdads"
                    android:id="@+id/tvAddressPager"
                    android:layout_marginTop="305dp"
                    android:layout_marginLeft="35dp" />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@color/colorBlackMuda"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="Monthly"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"/>
                <View
                    android:layout_width="310dp"
                    android:layout_height="1dp"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="55dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Unlimited Visit in one month"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="65dp"/>

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="40dp"

                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="15dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.300.000"
                        android:textSize="20dp"
                        android:id="@+id/tvPricePager"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorWhite"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:background="@color/colorWhite"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:textColor="@color/colorBlackMuda"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="50"
                    android:id="@+id/tvDescriptionPager"
                    android:text="testinglalalaeye"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"
                    android:singleLine="false" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>